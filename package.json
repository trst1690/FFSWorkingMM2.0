{
  "name": "fantasy-draft-backend",
  "version": "1.0.0",
  "description": "Fantasy Draft DFS Game Backend",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --watchAll",
    "test:once": "jest",
    "test:coverage": "jest --coverage",
    "test:setup": "NODE_ENV=test npm run db:reset",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e --runInBand",
    "db:init": "node src/db/init.js",
    "db:reset": "node src/db/reset.js",
    "db:seed": "node src/db/seeders/index.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "vapid:generate": "npx web-push generate-vapid-keys"
  },
  "keywords": [
    "fantasy",
    "sports",
    "dfs",
    "draft",
    "game",
    "websocket",
    "realtime"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "redis": "^5.1.0",
    "sequelize": "^6.37.2",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/sequelize": "^4.28.20",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "@types/web-push": "^3.6.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "src/**/*.spec.js"
    ],
    "delay": "2500"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
